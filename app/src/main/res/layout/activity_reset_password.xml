<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#103F27"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#103F27"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#103F27"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/reset_txt_password"
                android:hint="New Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFFFF"/>

            <EditText
                android:id="@+id/reset_txt_confirmPassword"
                android:hint="Confirm New Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingVertical="12dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#80FFFFFF"
                android:backgroundTint="#FFFFFF"/>

            <TextView
                android:id="@+id/password_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:background="#01FFFFFF"
                android:text="@string/password_requirements"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

            <!-- Button Row -->
            <Button
                android:id="@+id/btn_submit_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:text="Submit" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>