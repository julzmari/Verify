<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/homepage_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#103F26"
        android:gravity="center_horizontal|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homepage_img_logo"
                android:layout_width="310dp"
                android:layout_height="366dp"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="100dp"
                android:contentDescription="@string/logo"
                android:scaleType="fitXY"
                android:src="@drawable/location" />

            <LinearLayout
                android:id="@+id/login_register_ll2"
                android:layout_width="348dp"
                android:layout_height="176dp"
                android:layout_marginHorizontal="26dp"
                android:layout_marginBottom="53dp"
                android:orientation="vertical"
                android:paddingVertical="9dp">

                <Button
                    android:id="@+id/homepage_login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFEFE"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/log_in_txt"
                    android:textColor="#103F26"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/homepage_register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:backgroundTint="#F8F8F8"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/register_txt"
                    android:textColor="#103F26"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
